---
import Layout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

const title = "Nathan Waltz's Tech Blog";
const subtitle = "All things functional programming, PL, static analysis, and life!"
const imageLink = "/logo.svg";
---
<Layout
  title={title}
  subtitle={subtitle}
  >
  <Hero
    heading={title}
    subtitle={subtitle}
    imageLink={imageLink}
  />
</Layout>
