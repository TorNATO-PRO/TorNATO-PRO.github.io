---
import './Hero.css'

const { heading, subtitle, imageLink } = Astro.props;

const subtitleHtml = subtitle.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
---
<section
    class="hero"
    aria-labelledby="hero-title"
    aria-describedby="hero-subtitle"
>
    <div class="hero__content">
        <img
            class="hero__logo"
            src={imageLink}
            alt="Nathan Waltz logo"
            width="400"
            height="400"
            decoding="async"
            fetchpriority="high"
        />
        <h1 id="hero-title" class="hero__title">{heading}</h1>
        <p id="hero-subtitle" class="hero__subtitle" set:html={subtitleHtml} />
    </div>
</section>
