---
import './Hero.css'

const { heading, subtitle, imageLink } = Astro.props;

const subtitleHtml = subtitle.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');
---
<section
    class="hero"
    aria-labelledby="hero-title"
    aria-describedby="hero-subtitle"
>
    <div class="header">
        <img
            src={imageLink}
            alt=""
            style="max-height: 400px;"
            decoding="async"
            fetchpriority="high"
        />
        <h1 id="hero-title" class="title">{heading}</h1>
        <p id="hero-subtitle" class="subtitle" set:html={subtitleHtml}></p>
    </div>
</section>
