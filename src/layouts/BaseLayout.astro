---
import PrelineLoader from '../components/PrelineLoader.astro';
import '../styles/global.css'
const { title = 'Nathan Waltz' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 bg-white dark:bg-gray-900 dark:text-gray-100">
    <main class="scroll-smooth overflow-y-scroll">
      <slot />
    </main>
  </body>

  <PrelineLoader />
</html>
